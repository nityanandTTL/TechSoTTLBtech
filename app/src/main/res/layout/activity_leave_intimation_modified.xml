                    android:layout_weight="0.75"
                    android:padding="5dp"
                    android:text="Duration:" />

                <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/group"
                    android:layout_width="0dp"
