<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e6e6e6"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <!-- LEFT TITLE PART -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_weight="3"
                android:background="@color/bgTitleRight"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/vseparator"
                    android:textSize="14sp" />
            </RelativeLayout>
            <!-- RIGHT TITLE PART -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/camp_screen_bg"
                android:paddingTop="20dp">

                <ImageView
                    android:id="@+id/title_from_to_dots"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="-8dp"
                    android:src="@drawable/user_profile" />

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_vertical"
                    android:layout_toEndOf="@+id/title_from_to_dots"
                    android:editable="false"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:freezesText="false"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:minEms="13"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="CPL LOYALTY EUDP AAROGYAMM"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_ledger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_name"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toEndOf="@id/title_from_to_dots"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:lines="2"
                    android:singleLine="true"
                    android:text="Leader: 2"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/txt_call_leader"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/txt_name"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_toEndOf="@id/txt_ledger"
                    android:background="@drawable/call_icon"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:lines="2"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/title_camp_date"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/txt_ledger"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@drawable/hub_home_icon" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_ledger"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toEndOf="@+id/title_camp_date"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:lines="2"
                    android:text="11, Sushila app., shani chowk, panchavati, nashik"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />


                <ImageView
                    android:id="@+id/title_distance_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/title_camp_date"
                    android:layout_marginEnd="10dp"
                    android:src="@android:drawable/ic_menu_mylocation"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txt_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_date_time"
                    android:layout_toEndOf="@+id/title_distance_icon"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:paddingTop="15dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@android:color/darker_gray"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/title_svSeparator"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/txt_date_time"
                    android:layout_toEndOf="@+id/txt_distance"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:src="@drawable/vseparator"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/title_kits_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/title_camp_date"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@+id/title_svSeparator"
                    android:src="@drawable/kit_icon"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_kits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_date_time"
                    android:layout_toEndOf="@+id/title_kits_icon"
                    android:ellipsize="marquee"
                    android:fadingEdge="horizontal"
                    android:paddingTop="15dp"
                    android:singleLine="true"
                    android:text="BSV Kit"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="18sp"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/imgedit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/edit_order_icon"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_release"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/release_order"
                    android:visibility="gone" />

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_below="@+id/ll_1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/camp_screen_bg1">

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    android:background="@drawable/layout_bg_btech"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Btech Details"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/dp_14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_5"
                    android:background="@drawable/layout_bg">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_weight="1"
                        android:gravity="left">

                        <TextView
                            android:id="@+id/tv_leader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginStart="@dimen/dp_5"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Leader Name:"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/dp_10"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/tv_call_leader"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:padding="4dp"
                        android:src="@drawable/call_olc_picup_icon" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:id="@+id/ll_btechs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_2"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/camp_screen_bg2">

            <TextView
                android:id="@+id/tv_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:text="Test/Profile:" />

            <TextView
                android:id="@+id/tv_expected_crowd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_test"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:text="Expected Counts:" />

            <TextView
                android:id="@+id/no_of_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_expected_crowd"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:text="No. of Days:" />
            <Button
                android:id="@+id/img_accept"
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"
                android:layout_below="@+id/no_of_days"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:background="@drawable/purple_btn_bg"
                android:text="Accept"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_start"
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"
                android:layout_below="@+id/no_of_days"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:background="@drawable/purple_btn_bg"
                android:text="Start"
                android:minEms="5"
                android:textColor="@android:color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_arrived"
                android:layout_width="@dimen/dp_60"
                android:layout_height="wrap_content"
                android:layout_below="@+id/no_of_days"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:minEms="5"
                android:background="@drawable/purple_btn_bg"
                android:text="Arrived"
                android:textColor="@android:color/white"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>