<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_4sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_2sdp"
        android:weightSum="10">

        <LinearLayout
            android:id="@+id/lin_sampleType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/dp_1"
            android:layout_weight="4"
            android:background="@drawable/bg_sample_type_edta"
            android:orientation="vertical"
            android:visibility="gone">

            <!--            <TextView-->
            <!--                android:id="@+id/txt_sample_type"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_gravity="center_vertical"-->
            <!--                android:ellipsize="marquee"-->
            <!--                android:gravity="center"-->
            <!--                android:padding="@dimen/_5sdp"-->
            <!--                android:text="FLUORIDE-PP"-->
            <!--                android:textColor="@android:color/black"-->
            <!--                android:textSize="@dimen/_15sdp" />-->


            <TextView
                android:id="@+id/tv_serumtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_minus5sdp"
                android:elevation="6dp"
                android:ellipsize="end"
                android:gravity="center"
                android:text="Primary"
                android:textColor="@color/black"
                android:textSize="@dimen/_8sdp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sample_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_2sdp"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_2"
                android:src="@drawable/vial_icon" />

            <TextView
                android:id="@+id/txt_sample_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:text="Serum Sample"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginStart="@dimen/_8sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtinput_edtbencode"
                    android:hint="Enter code"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    app:errorTextAppearance="@color/red"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edt_ben_code"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"

                        android:digits="@string/AlphaNumericwithSpaceDIGITS"
                        android:paddingStart="@dimen/_8sdp"
                        android:textSize="@dimen/_10sdp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!--used for scan barcode other is for confirm barcode-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_edt_barcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_weight="6"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_8sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_blue"
                        android:elevation="@dimen/_10sdp">

                        <TextView
                            android:id="@+id/edt_barcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:gravity="center"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_2"
                            android:src="@drawable/scan_icon_grey" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/scan_barcode_button"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/camera_icon" />

                    <ImageView
                        android:id="@+id/imgDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/red_cross_icon"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:weightSum="6">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_weight="6"
                    app:cardCornerRadius="@dimen/_5sdp"
                    app:cardElevation="@dimen/_8sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/border_blue">

                        <TextView
                            android:id="@+id/edt_barcode_confirm"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="4.5"
                            android:gravity="center"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_2"
                            android:src="@drawable/scan_icon_grey" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/scan_barcode_button_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/camera_icon" />

                    <ImageView
                        android:id="@+id/imgDeleteconfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:src="@drawable/red_cross_icon"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_rbs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_sample_type_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="4"
            android:background="@drawable/bg_sample_type_fluoride"
            android:elevation="6dp"
            android:ellipsize="marquee"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="@dimen/_6sdp"
            android:singleLine="true"
            android:text="FLUORIDE-RBS"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_15sdp" />


        <TextView
            android:id="@+id/edt_barcode_rb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="4"
            android:background="@drawable/edittext_modified_states"
            android:gravity="center"
            android:hint="Enter Barcode"
            android:maxLength="8"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/scan_barcode_button_rb"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:background="@drawable/camera_icon" />

            <ImageView
                android:id="@+id/imgDelete_rb"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:src="@drawable/red_cross_icon"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>