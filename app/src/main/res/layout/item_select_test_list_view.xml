<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_collect_sample_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5"
        android:weightSum="9">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="7"
            android:weightSum="3">
            <ImageView
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:id="@+id/img_test_type"
                android:layout_height="40dp"
                android:src="@drawable/t"/>
            <LinearLayout
                android:layout_weight="2.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/txt_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:text="HbA1c"
                    android:textSize="@dimen/dp_8"
                    android:paddingLeft="@dimen/dp_10"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/txt_org_amt"
                        android:text="Rs 150"
                        android:gravity="center"
                        android:textSize="@dimen/dp_8"
                        android:textColor="@android:color/darker_gray"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:visibility="visible"
                        android:id="@+id/txt_dis_amt"
                        android:textSize="@dimen/dp_8"
                        android:text="Rs. 90 "/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:visibility="gone"
            android:id="@+id/img_print"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:src="@drawable/print_icon_collect_sample" />


        <LinearLayout
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center">

            <CheckBox
                android:id="@+id/chk_collected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:button="@android:drawable/checkbox_on_background"
                android:gravity="center" />
        </LinearLayout>


        <ImageView
            android:visibility="gone"
            android:id="@+id/img_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:src="@drawable/close_icon" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_horizontal_seperator1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_collect_sample_test"
        android:background="@drawable/img_horizontal_seperator" />
</RelativeLayout>