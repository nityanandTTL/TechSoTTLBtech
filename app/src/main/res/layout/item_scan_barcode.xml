<?xml version="1.0" encoding="utf-8"?>

<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_2">

    <LinearLayout android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_sample_type"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/bg_sample_type_edta"
                android:elevation="6dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:minEms="8"
                android:padding="@dimen/dp_5"
                android:text="FLUORIDE-PP"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/edt_barcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edittext_modified_states"
                    android:gravity="center"
                    android:hint="Scan barcode"
                    android:maxLength="8"
                    android:minEms="6"
                    android:padding="@dimen/dp_5"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/scan_barcode_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/camera_icon" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_rbs"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_sample_type_rb"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@drawable/bg_sample_type_fluoride"
                android:elevation="6dp"
                android:ellipsize="marquee"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:maxLines="1"
                android:minEms="8"
                android:padding="@dimen/dp_5"
                android:text="FLUORIDE-RBS"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/edt_barcode_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edittext_modified_states"
                    android:gravity="center"
                    android:hint="Enter Barcode"
                    android:maxLength="8"
                    android:minEms="6"
                    android:padding="@dimen/dp_5"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/scan_barcode_button_rb"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/camera_icon" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</TableRow>
