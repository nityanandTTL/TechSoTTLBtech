<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".NewScreenDesigns.AddRemoveTestProfileActivity">
    <RelativeLayout
        android:id="@+id/rel_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Test"
            android:layout_margin="@dimen/_5sdp"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/_10sdp"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txtClose"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/close_icon_while"
            />
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rel_search_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_header"
        android:layout_margin="@dimen/_2sdp"
        android:background="@drawable/rounded_background_empty_orange">

        <EditText
            android:id="@+id/ed_Search"
            android:layout_toLeftOf="@+id/img_searchIcon"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:hint="Search profile, test or offer .."/>

        <ImageView
            android:id="@+id/img_searchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/search_icon_orange"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_selectedTest"
        android:layout_below="@+id/rel_search_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center"
                android:padding="3dp"
                android:text="Test"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:background="@color/grey1" />

            <TextView
                android:id="@+id/b2b_rate_adm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="3dp"
                android:text="App Rate"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_background_color_primary"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTestName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:padding="3dp"
                android:maxLines="3"
                android:gravity="bottom"
                android:scrollbars = "vertical"
                android:textAllCaps="true"
                android:textSize="12dp"
                android:textColor="@color/black"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/colorPrimary" />

            <TextView
                android:id="@+id/tvAppRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight="3"
                android:gravity="center"
                android:padding="3dp"
                android:textSize="12dp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_profileCategory"
        android:layout_below="@+id/lin_selectedTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorOrange"
        android:layout_margin="@dimen/_2sdp"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_Test"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/_2sdp"
            android:padding="@dimen/_6sdp"
            android:text="Tests"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/_14sdp"
            android:background="@color/white"/>

        <TextView
        android:id="@+id/tv_Profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/_6sdp"
            android:layout_margin="@dimen/_2sdp"
        android:text="Profiles"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/colorOrange"
        android:textSize="@dimen/_14sdp"
        android:background="@color/white"/>

        <TextView
            android:id="@+id/tv_POP"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_6sdp"
            android:layout_margin="@dimen/_2sdp"
            android:text="POP"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/_14sdp"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/tv_offers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_6sdp"
            android:layout_margin="@dimen/_2sdp"
            android:text="Offers"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorOrange"
            android:textSize="@dimen/_14sdp"
            android:background="@color/white"/>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/lin_profileCategory"
        android:layout_above="@+id/ll_btn">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_TestList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <TextView
            android:id="@+id/tv_noDatafound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO DATA FOUND"
            android:textSize="@dimen/_18sdp"
            android:layout_centerInParent="true"
            android:visibility="gone"/>


    </RelativeLayout>



    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background_filled_oranged"
            android:minEms="8"
            android:text="Save"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>