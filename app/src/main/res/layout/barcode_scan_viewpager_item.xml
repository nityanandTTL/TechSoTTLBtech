<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp">

            <ScrollView
                android:id="@+id/scroll_benDetails_Scanbarcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ben Name : "
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15sdp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_benName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TEST (25/M)"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_1"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Order no"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=" : "
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_OrderNo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:text="123456"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_benProduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_1"
                        android:weightSum="10">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="Product "
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=" : "
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12sdp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_products"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="7"
                            android:text="Test"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginTop="@dimen/dp_3"
                        android:background="@color/grey" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyle_barcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/grey" />


                    <!--                    <Button-->
                    <!--                        android:id="@+id/btn_remove"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="@dimen/_30sdp"-->
                    <!--                        android:layout_gravity="center"-->
                    <!--                        android:layout_margin="@dimen/dp_2"-->
                    <!--                        android:background="@color/colorSecondary"-->
                    <!--                        android:gravity="center"-->
                    <!--                        android:visibility="gone"-->
                    <!--                        android:padding="@dimen/_5sdp"-->
                    <!--                        android:text="Remove Urine Sample"-->
                    <!--                        android:textColor="@color/white"-->
                    <!--                        android:textSize="@dimen/_12sdp"-->
                    <!--                        android:textStyle="bold" />-->


                    <LinearLayout
                        android:id="@+id/lin_BenbarcodePic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_5sdp"
                                android:text="Upload Vial Image*"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />

                            <ImageView
                                android:id="@+id/img_uploadBenVail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:src="@drawable/upload_icon" />

                            <TextView
                                android:id="@+id/txt_captureBenBarcodePic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:gravity="center"
                                android:text="@string/ViewImage"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/_8sdp"
                                android:visibility="gone" />


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <ImageView
                                    android:id="@+id/imgDelete"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_30sdp"
                                    android:src="@drawable/red_cross_icon"
                                    android:visibility="visible" />

                                <ImageView

                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_30sdp"
                                    android:src="@drawable/camera_icon" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:id="@+id/ll_urine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:text="Remove Urine Sample"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10sdp" />

                        <ImageView
                            android:id="@+id/btn_remove"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:src="@drawable/delete_icon" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_otpvalidate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_1"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/tv_number"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1.4"
                                android:paddingLeft="@dimen/_2sdp"
                                android:text="OTP will be Send to 9999999999"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_weight="0.6"
                                app:cardCornerRadius="@dimen/_5sdp"
                                app:cardElevation="@dimen/_10sdp">

                                <TextView
                                    android:id="@+id/btn_sendopt"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:padding="@dimen/_3sdp"
                                    android:text="Send OTP"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="@dimen/_10sdp" />

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_1"
                            android:orientation="horizontal"
                            android:weightSum="2">


                            <EditText
                                android:id="@+id/edt_verify"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1.4"
                                android:hint="Verify OTP"
                                android:inputType="number"
                                android:maxLength="6"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10sdp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_10sdp"
                                android:layout_weight="0.6"
                                app:cardCornerRadius="@dimen/_5sdp"
                                app:cardElevation="@dimen/_10sdp">

                                <TextView
                                    android:id="@+id/btn_verify_otp"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:padding="@dimen/_3sdp"
                                    android:text="Verify OTP"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="@dimen/_10sdp" />
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_grey"
                        android:layout_width="match_parent"
                        android:layout_height="0.8dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/grey"
                        android:orientation="horizontal"
                        android:visibility="gone" />


                    <RelativeLayout
                        android:id="@+id/ll_srfID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@drawable/border_layout"
                        android:padding="@dimen/_5sdp"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/edt_srf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:digits="@string/Mobile_no_validation"
                            android:hint="SRF ID"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLength="14"
                            android:paddingStart="@dimen/_5sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingEnd="@dimen/_20sdp"
                            android:paddingBottom="@dimen/_5sdp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true">

                            <ImageView
                                android:id="@+id/img_resetSRF"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_3sdp"
                                android:text="Reset"
                                android:textSize="@dimen/_14sdp"
                                app:srcCompat="@drawable/close_icon_red" />

                            <TextView
                                android:id="@+id/tv_saveSRF"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorPrimary"
                                android:padding="@dimen/_4sdp"
                                android:text="Save"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_14sdp" />

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>
            </ScrollView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>