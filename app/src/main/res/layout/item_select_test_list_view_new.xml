<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_collect_sample_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_5"
        android:weightSum="9">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="7"
            android:weightSum="3">
            <ImageView
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:id="@+id/img_test_type"
                android:layout_height="40dp"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_weight="2.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="2">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/txt_test"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:text="HbA1c"
                    android:paddingLeft="@dimen/dp_10"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:id="@+id/txt_dis_amt"
                        android:text="Rs. 90"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_10"
                        android:id="@+id/test_fasting"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/visit_fasting"
                        android:visibility="visible" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:visibility="visible"
            android:id="@+id/img_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:src="@drawable/checkbox_unchecked" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/img_checked"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:src="@drawable/checkbox_checked" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/img_unCheckDisabled"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:src="@drawable/checkbox_unchecked_disabled" />


        <LinearLayout
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center">

            <CheckBox
                android:id="@+id/chk_collected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center" />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_horizontal_seperator1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_collect_sample_test"
        android:background="@drawable/img_horizontal_seperator" />
</RelativeLayout>