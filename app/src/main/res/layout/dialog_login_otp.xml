<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:padding="@dimen/dp_5"
    android:layout_height="wrap_content">
<TextView
    android:layout_width="match_parent"
    android:gravity="center"
    android:textStyle="bold"
    android:padding="@dimen/dp_5"
    android:background="@color/btn_login_end_grd"
    android:layout_height="wrap_content"
    android:textColor="@color/white"
    android:text="OTP Verification"/>
    <TextView
        android:padding="@dimen/dp_5"
        android:layout_width="match_parent"
        android:text="OTP Sent to xxxxxxx898. Enter the OTP below in case if we fail to detect the SMS automatically"
        android:layout_height="wrap_content" />
    <EditText
        android:padding="@dimen/dp_5"
        android:background="@android:drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:text="Resend OTP"
        android:textColor="@color/colorFAB1"
        android:layout_height="wrap_content" />
    <TextView
        android:gravity="right"
        android:visibility="gone"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:text="Please wait: 26"
        android:textColor="@color/colorFAB1"
        android:layout_height="wrap_content" />
    <Button
        android:padding="@dimen/dp_5"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/login_btn_bg"
        android:layout_height="wrap_content"
        android:text="Verify OTP"/>
</LinearLayout>