            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/txt_Profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_toLeftOf="@+id/img_drop_down_habit"
                android:gravity="left|center_vertical"
                android:padding="@dimen/dp_5"
                android:singleLine="true"
                android:text="Profile"
                android:textColor="@android:color/white"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:textSize="18sp" />

            <!--

                <ImageView
                    android:id="@+id/img_drop_down_select_tests_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_30"
                    android:src="@drawable/selector_drop_down_button" />
            -->

        </LinearLayout>


        <LinearLayout
            android:layout_below="@+id/ll_layout_title_select_tests_profile"
            android:visibility="gone"
            android:id="@+id/ll_layout_select_tests_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ListView
                android:padding="@dimen/dp_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv_layout_select_tests_profile"></ListView>
        </LinearLayout>

    </RelativeLayout>

