<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Spinner
        android:id="@+id/sp_tests"
        android:layout_above="@+id/ll_edit_tedt_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
    android:id="@+id/ll_edit_tedt_list"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_1">

    <RelativeLayout
        android:id="@+id/rl_layout_select_tests_pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_1">

        <LinearLayout
            android:id="@+id/ll_layout_title_select_tests_pop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/txt_POP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_toLeftOf="@+id/img_drop_down_habit"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:gravity="left|center_vertical"
                android:padding="@dimen/dp_5"
                android:singleLine="true"
                android:text="POP"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/ll_layout_title_select_tests_pop"
            android:visibility="gone"
            android:id="@+id/ll_layout_select_tests_pop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ListView
                android:padding="@dimen/dp_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv_layout_select_tests_pop">
            </ListView>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/rl_layout_select_tests_pop"
        android:id="@+id/rl_layout_select_tests_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_1">

        <LinearLayout
