<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:id="@+id/ll_login"
    android:orientation="vertical"
    android:padding="@dimen/dp_10"
    android:gravity="center"
    android:weightSum="10"
    tools:context="com.dhb.activity.LoginScreenActivity">
    <ImageView
        android:layout_weight="5"
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp_10"
        android:src="@drawable/app_logo"/>
    <LinearLayout
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="@android:color/white"
            android:id="@+id/login_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:padding="@dimen/dp_3"
                android:id="@+id/username_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/username_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/username_icon" />

                <EditText
                    android:id="@+id/username_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter User Name"
                    android:minEms="15"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:nextFocusForward="@+id/password_login" />
            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/dp_3"
                android:id="@+id/password_block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/password_icon" />

                <EditText
                    android:id="@+id/password_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Enter Password"
                    android:inputType="textPassword"
                    android:minEms="15"
                    android:textSize="15sp"
                    android:maxLines="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/dp_5"
                android:text="Forgot Password?"
                android:textAlignment="viewEnd"
                android:textSize="15sp" />

            <Button
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:minEms="8"
                android:padding="@dimen/dp_2"
                android:gravity="center"
                android:id="@+id/login_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/login_btn_bg"
                android:text="Login"
                android:textColor="@android:color/white" />

            <TextView
                android:textSize="15sp"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:id="@+id/text_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Join our Network" />
        </LinearLayout>
        <ImageView
            android:layout_marginTop="0dp"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/login_shadow"/>
    </LinearLayout>
</LinearLayout>
