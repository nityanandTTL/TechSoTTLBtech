<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:background="@drawable/borde_rect"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <Spinner
                    android:id="@+id/spinType"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:background="@color/transparent"
                    android:padding="@dimen/_3sdp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_weight="0.1"
                    android:src="@drawable/spinner_drawableimage" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:layout_weight="0.5"
                android:background="@drawable/borde_rect"
                android:orientation="vertical"
                android:weightSum="2">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:layout_weight="0.5"
                    android:background="@color/colorOrange"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="Feedback"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/edtQuery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_2sdp"
                    android:layout_weight="1.5"
                    android:background="@null"
                    android:digits="@string/addressvalidation"
                    android:ems="10"
                    android:gravity="start|top"
                    android:inputType="textMultiLine|textCapSentences"
                    android:lines="5"
                    android:maxLength="250"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:hint="@string/enter_feedback"
                    android:textColorHint="@color/tertiary_color"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_40sdp"
            android:background="@color/colorOrange"
            android:elevation="@dimen/_10sdp"
            android:text="@string/submit"
            android:textColor="@color/white"
            tools:targetApi="lollipop" />
    </LinearLayout>


</RelativeLayout>