<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/contentDividerLine">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/cell_title_layout" />

        <RelativeLayout
            android:id="@+id/order_details_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/bg_content"
            android:baselineAligned="false">

            <RelativeLayout
                android:id="@+id/rl_left_marker"
                android:layout_width="5dp"
                android:layout_height="385dp"
                android:background="@color/colorSecondary">

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_tests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:minEms="5"
                    android:padding="@dimen/dp_10"
                    android:text="Tests:" />

                <TextView
                    android:layout_marginLeft="50dp"
                    android:id="@+id/edt_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:drawable/edit_text"
                    android:drawableEnd="@android:drawable/arrow_down_float"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:freezesText="true"
                    android:gravity="center"
                    android:hint="Click to view tests list"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:minEms="13"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_barcodes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_tests"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/rl_left_marker"
                android:orientation="horizontal"
                android:visibility="gone">

                <TableLayout
                    android:id="@+id/tl_barcodes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_vhc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_barcodes"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_venipuncture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:padding="@dimen/dp_10"
                    android:text="Venipuncture: " />

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/img_venipuncture"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/camera_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Hard Copy: " />

                <ImageView
                    android:id="@+id/hard_copy_check"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/tick_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_vhc"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/clinical_history_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="@dimen/dp_10"
                        android:text="Clinical History:" />

                    <TextView
                        android:id="@+id/clinical_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:drawable/edit_text"
                        android:drawableEnd="@android:drawable/arrow_down_float"
                        android:editable="false"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:freezesText="true"
                        android:gravity="center"
                        android:hint="Select Clinical History"
                        android:lines="1"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:minEms="13"
                        android:paddingRight="@dimen/dp_5"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lab_alerts_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:minEms="5"
                        android:padding="@dimen/dp_10"
                        android:text="Lab Alerts:" />

                    <TextView
                        android:layout_marginLeft="30dp"
                        android:id="@+id/edt_lab_alerts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:drawable/edit_text"
                        android:drawableEnd="@android:drawable/arrow_down_float"
                        android:editable="false"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:freezesText="true"
                        android:gravity="center"
                        android:hint="Select Lab Alerts"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:minEms="13"
                        android:paddingRight="@dimen/dp_5"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:minEms="5"
                        android:padding="@dimen/dp_10"
                        android:text="Remarks:" />

                    <EditText
                        android:layout_marginLeft="40dp"
                        android:id="@+id/customer_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:drawable/edit_text"
                        android:hint="Enter Remarks"
                        android:inputType="textCapSentences|textMultiLine"
                        android:maxLength="2000"
                        android:maxLines="4"
                        android:minEms="11"
                        android:minLines="2"
                        android:paddingRight="@dimen/dp_5" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>